@model RS1_Ispit_asp.net_core.ViewModels.PretragaTakmicenjeVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pretraga takmicenja</h2>
<hr />
<div class="row mt-5">
    <div class="col-md-5 col-lg-4 col-sm-12">
        <form method="post" asp-action="Pretraga">
            <div class="row mt-5">
                <div class="col-md-6">
                    <label asp-for="SkolaDomacinId" class="control-label"></label>
                </div>
                <div class="col-md-6">
                    <select class="form-control" asp-for="SkolaDomacinId" asp-items="Model.Skole"></select>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-6">
                    <label asp-for="Razred" class="control-label"></label>
                </div>
                <div class="col-md-6">
                    <select class="form-control" asp-for="Razred" asp-items="Model.Razredi"></select>
                </div>
            </div>
            <hr/>
            <div class="row mt-5">
                <div class="col-md-3">
                    <button class="btn btn-primary" type="submit">Odaberi</button>
                </div>
            </div>
        </form>
    </div>
    
</div>


