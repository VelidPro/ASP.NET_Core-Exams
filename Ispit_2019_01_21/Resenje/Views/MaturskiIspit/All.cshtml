@model RS1_Ispit_asp.net_core.ViewModels.MaturskiIspitiVM
@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <h2>Maturski ispiti koje je evidentirao <strong>@Model.Nastavnik</strong></h2>

    </div>
<hr/>
<div class="row">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Datum</th>
            <th>Skola</th>
            <th>Predmet</th>
            <th>Nisu pristupili ucenici**</th>
            <th>Akcija</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var x in Model.MaturskiIspiti)
        {
            <tr>
                <td>@x.Datum.ToString("d")</td>
                <td>@x.Skola</td>
                <td>@x.Predmet</td>
                <td>@string.Join(", ",x.UceniciNisuPristupili)</td>
                <td><a asp-action="Detalji" asp-route-Id="@x.Id">Uredi</a></td>
            </tr>
        }
        </tbody>
    </table>
</div>
<hr/>
<div class="row">
    <div class="col-md-3">
        <a class="btn btn-primary" asp-action="Dodaj" asp-route-nastavnikId="@Model.NastavnikId"
           ajax-poziv="da" ajax-rezultat="dodavanjeMaturskogIspita">Dodaj</a>
    </div>
</div>
<hr/>
<div class="row" id="dodavanjeMaturskogIspita">
</div>


